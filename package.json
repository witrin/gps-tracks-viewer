{
	"name": "gps-tracks-viewer",
	"version": "1.0.0-alpha",
	"description": "",
	"author": "Jawan Kolanowski <kolanowj@hochschule-trier.de>",
	"license": "MIT",
	"config": {
		"target": {
			"folder": "dist/",
			"port": "8080"
		}
	},
	"devDependencies": {
		"browserify": "^14.3.0",
		"http-server": "^0.9.0",
		"eslint": "^3.19.0",
		"onchange": "^3.2.1",
		"concurrently": "^3.4.0",
		"clean-css-cli": "^4.0.12",
		"uglify-js": "mishoo/uglifyjs2#harmony",
		"less": "^2.7.2",
		"babel-cli": "^6.24.1",
		"babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
		"babel-plugin-add-module-exports": "^0.2.1",
		"babel-plugin-transform-custom-element-classes": "^0.1.0"
	},
	"dependencies": {
		"@webcomponents/custom-elements": "webcomponents/custom-elements",
		"modernizr": "^3.5.0"
	},
	"scripts": {
		"create:target": "mkdir -p ${npm_package_config_target_folder} tmp",
		"create:modernizr": "modernizr -c modernizr.json -d tmp",

		"lint:scripts": "eslint --max-warnings 1000 src/**/*.js",
		"compile:scripts": "babel src --out-dir tmp",
		"bundle:scripts": "browserify tmp/boot.js > ${npm_package_config_target_folder}bundle.js",
		"compress:scripts": "uglifyjs ${npm_package_config_target_folder}/bundle.js -c -m -o ${npm_package_config_target_folder}/bundle.js",

		"compile:styles": "for file in src/*.less src/**/*.less; do lessc $file tmp/`expr match \"$file\" 'src\/\\(.*\\)\\.less'`.css; done",
		"bundle:styles": "cp tmp/styles.css ${npm_package_config_target_folder}/bundle.css",
		"compress:styles": "cleancss -m -c -o ${npm_package_config_target_folder}/bundle.css ${npm_package_config_target_folder}/bundle.css",
		
		"debug:scripts": "npm -s run lint:scripts && npm -s run compile:scripts && npm -s run bundle:scripts",
		"debug:markup": "cp src/index.html ${npm_package_config_target_folder}",
		"debug:styles": "npm -s run compile:styles && npm -s run bundle:styles",

		"watch:scripts": "onchange 'src/**/*.js' -w -i -- npm -s run debug:scripts",
		"watch:styles": "onchange 'src/**/*.less' -w -i -- npm -s run debug:styles",
		"watch:markup": "onchange 'src/**/*.html' -w -i -- npm -s run debug:markup",
		
		"build:scripts": "npm -s run debug:scripts && npm -s run compress:scripts",
		"build:markup": "npm -s run debug:markup",
		"build:styles": "npm -s run debug:styles && npm -s run compress:styles",

		"clean": "rm -rf ${npm_package_config_target_folder} tmp",
		"start": "http-server ${npm_package_config_target_folder} -p ${npm_package_config_target_port} & echo $! > `mktemp /tmp/http-server-XXXXXX`",
		"stop": "kill `cat /tmp/http-server-* 2> /dev/null` 2> /dev/null && rm /tmp/http-server-* 2> /dev/null || true",
		
		"init": "npm -s run create:target && npm -s run create:modernizr",

		"prebuild": "npm -s run init",
		"predebug": "npm -s run init",
		"prewatch": "npm -s run init",

		"lint": "npm -s run lint:scripts",
		"debug": "npm -s run debug:markup && npm -s run debug:styles && npm -s run debug:scripts",
		"watch": "concurrently --raw --kill-others 'npm -s run watch:scripts' 'npm -s run watch:markup' 'npm -s run watch:styles'",
		"build": "npm -s run build:markup && npm -s run build:styles && npm -s run build:scripts"
	}
}
